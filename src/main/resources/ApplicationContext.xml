<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
>

    <bean name = "client,client2" id = "client" class = "Client">
        <constructor-arg index="0" value="2" />
        <constructor-arg index="1" type="java.lang.String" value="Dima"/>
    </bean>

    <bean id="eventLogger" class="ConsoleEventLogger"/>

    <bean id = "fileLogger" class = "FileEventLogger" init-method="init" abstract="true">
        <constructor-arg value="temp.txt"/>
    </bean>

<!--    <bean id = "cacheLogger" class = "CacheFileEventLogger" destroy-method="destroy">-->
<!--        <constructor-arg value="temp.txt"/>-->
<!--        <constructor-arg value="2"/>-->
<!--    </bean>-->


    <bean id = "cacheLogger" class = "CacheFileEventLogger" destroy-method="destroy" parent="fileLogger">
        <constructor-arg value="2"/>
    </bean>

    <bean id = "app" class = "App">
        <constructor-arg type="Client" ref = "client"/>
        <constructor-arg ref = "cacheLogger"/>
    </bean>

    <bean id = "dateFormat"
          class = "java.text.DateFormat"
          factory-method="getDateTimeInstance"/>

    <bean id = "date"
          class = "java.util.Date"/>

    <bean id = "event" class = "Event" scope="prototype">
        <constructor-arg ref="date"/>
        <constructor-arg type="java.text.DateFormat" ref = "dateFormat"/>
    </bean>



</beans>