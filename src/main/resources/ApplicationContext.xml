<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
>

    <bean name = "client,client2" id = "client" class = "Client">
        <constructor-arg index="0" value="2" />
        <constructor-arg index="1" type="java.lang.String" value="Dima"/>
    </bean>

    <bean id="eventLogger" class="ConsoleEventLogger"/>
    <bean id = "fileLogger" class = "FileEventLogger" init-method="init" destroy-method="destroy">
        <constructor-arg value="temp.txt"/>
    </bean>

    <bean id = "app" class = "App">
        <constructor-arg type="Client" ref = "client"/>
        <constructor-arg ref = "eventLogger"/>
    </bean>

    <bean id = "dateFormat"
          class = "java.text.DateFormat"
          factory-method="getDateTimeInstance"/>

    <bean id = "event" class = "Event" scope="prototype">
        <constructor-arg value="java.util.Date"/>
        <constructor-arg type="java.text.DateFormat" ref = "dateFormat"/>
    </bean>



</beans>